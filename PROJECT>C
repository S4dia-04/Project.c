    printf("2) To destroy something frozen\n");
    printf("3) To start a fight\n");
    printf("4) To tell a secret\n");
    printf("Your answer: ");
    scanf("%d", &answer);
    if (answer == 1) {
        printf("Correct!\n");
        score += 10;
    } else {
        printf("Wrong! The correct answer is 1.\n");
    }

    printf("\n2. What does 'Hit the sack' mean?\n");
